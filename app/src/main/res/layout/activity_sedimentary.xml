<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.andynilson.learnaboutrocks.IgneousActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:text="Sedimentary Rock"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="34sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:text="Sedimentary rocks are types of rock that are formed by the deposition of material at the Earth's surface and within bodies of water." />


        <!-- ********************* -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/Conglomerate_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/conglomerate" />


                <TextView
                    android:id="@+id/Conglomerate_image_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/Conglomerate_image"
                    android:layout_alignLeft="@id/Conglomerate_image"
                    android:layout_alignRight="@id/Conglomerate_image"
                    android:layout_alignTop="@id/Conglomerate_image"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="Conglomerate"
                    android:textColor="@color/white"
                    android:textSize="40sp" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Conglomerate /kəŋˈɡlɒmərᵻt/ is a coarse-grained clastic sedimentary rock that is composed of a substantial fraction of rounded to subangular gravel-size clasts, e.g., granules, pebbles, cobbles, and boulders, larger than 2 mm (0.079 in) in diameter. " />
        </LinearLayout>
        <!-- ********************* -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/sandstone_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sandstone" />


            <TextView
                android:id="@+id/sandstone_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/sandstone_image"
                android:layout_alignLeft="@id/sandstone_image"
                android:layout_alignRight="@id/sandstone_image"
                android:layout_alignTop="@id/sandstone_image"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Sandstone"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Sandstone (sometimes known as arenite) is a clastic sedimentary rock composed mainly of sand-sized minerals or rock grains." />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/limestone_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/limestone" />


            <TextView
                android:id="@+id/limestone_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/limestone_image"
                android:layout_alignLeft="@+id/limestone_image"
                android:layout_alignRight="@+id/limestone_image"
                android:layout_alignTop="@+id/limestone_image"
                android:gravity="center"
                android:text="Limestone"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="32dp"
            android:text="Limestone is a sedimentary rock composed largely of the minerals calcite and aragonite, which are different crystal forms of calcium carbonate (CaCO3)." />


